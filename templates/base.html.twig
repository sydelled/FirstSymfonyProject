<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body class="bg-dark">

    <div class="container container-sm text-white m-10 w-full pt-5 mx-auto">

        <div class="d-flex">
            <div class="container container-md">
                <div class="row">
                    <h1 class="text-lg">
                        <a href="{{ path('app_micro_post') }}" class="link-light link-opacity-75-hover link-underline-opacity-0">Home</a>
                        {% block bread %}

                        {% endblock %}
                    </h1>
                </div>
            </div>

            <div class="container text-body-tertiary text-end">
                <div class="row">
                    <div class="col">
                <a href="{{ path('app_login') }}" class="d-block link-light link-opacity-75-hover link-underline-opacity-0 mb-2">Login</a>
                <a href="{{ path('app_micro_post_add') }}" class="d-block link-light link-opacity-75-hover link-underline-opacity-0">Add New</a>
            </div>
                </div>
            </div>
        </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success border border-success" role="alert">{{ message }}</div>
    {% endfor %}

    {% block body %}{% endblock %}

    </div>
    </body>
</html>
